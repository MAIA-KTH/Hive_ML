Bootstrap: docker
From: continuumio/anaconda3

%files
    ./requirements.txt .
    . /opt/code/Hive_ML

%post

    # Install needed packages
    export DEBIAN_FRONTEND=noninteractive
    apt-get update
    apt-get install -y git \
    wget \
    build-essential

    . /opt/conda/etc/profile.d/conda.sh
    conda activate
    pip install numpy
    pip install -v -e /opt/code/Hive_ML

%runscript
    . /opt/conda/etc/profile.d/conda.sh
    conda activate
    echo "Arguments received: $*"
    exec "$@"


